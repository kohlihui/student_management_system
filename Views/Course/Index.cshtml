@model IEnumerable<WebApplication1.Models.course>

@{
    ViewBag.Title = "Index";
}

<h2>Courses</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-secondary">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.course1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.duration)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.course1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.duration)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.id })" class="btn btn-primary btn-sm">Edit</a>
            <a href="@Url.Action("Details", new { id = item.id })" class="btn btn-info btn-sm ms-1">Details</a>
            <a href="@Url.Action("Delete", new { id = item.id })" class="btn btn-danger btn-sm ms-1">Delete</a>
        </td>
    </tr>
}

</table>
